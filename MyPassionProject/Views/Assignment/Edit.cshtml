@model MyPassionProject.Models.ViewModels.UpdateAssignment

@{
    ViewBag.Title = "Edit Assignment";
}


<h2 class="text-center mb-5">Update Assignment</h2>

<div class="mb-5">
    <form class="col-lg-6 offset-lg-3" action="/Assignment/Update/@Model.SelectedAssignment.AssignmentId" method="POST">
        <div style="display:none;" class="form-group">
            @* Pass through the assignment ID *@
            <input type="text" class="form-control" id="id" name="AssignmentId" value="@Model.SelectedAssignment.AssignmentId">
        </div>
        <div class="form-group">
            <label for="type">Assignment Type:</label>
            <input type="text" class="form-control" id="type" name="AssignmentType" value="@Model.SelectedAssignment.AssignmentType">
        </div>
        <div class="form-group">
            <label for="name">Project Name:</label>
            <select class="form-select form-select-lg" id="name" name="ProjectId">
                <option selected hidden value="@Model.SelectedAssignment.ProjectId">@Model.SelectedAssignment.ProjectName</option>
                @foreach (var project in Model.ProjectOptions)
                {
                    <option value="@project.ProjectId">@project.ProjectName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="status">Status:</label>
            <select class="form-select form-select-lg" name="status" id="status">
                <option selected hidden value="@Model.SelectedAssignment.Status">@Model.SelectedAssignment.Status</option>
                <option value="Todo">To DO</option>
                <option value="Doing">Doing</option>
                <option value="Done">Done</option>
            </select>
        </div>
        <div class="form-group">
            <label for="date">Due Date:</label>
            <input type="date" id="date" name="DueDate" class="form-control" value="@Model.SelectedAssignment.DueDate.ToString().Substring(0, 10)">
        </div>
        <div>
            <button type="submit" class="btn btn-primary my-3">Update Assignment</button>
        </div>
    </form>
</div>