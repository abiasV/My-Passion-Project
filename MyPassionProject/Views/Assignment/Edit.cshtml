@model MyPassionProject.Models.ViewModels.UpdateAssignment

@{
    ViewBag.Title = "Edit Assignment";
}


<h2>Update Assignment</h2>
<form action="/Assignment/Update/@Model.SelectedAssignment.AssignmentId" method="POST">
    <div style="display:none;">
        @* Pass through the assignment ID *@
        <input type="text" name="AssignmentId" value="@Model.SelectedAssignment.AssignmentId" />
    </div>
    <div>
        <label>Assignment Type:</label> <input type="text" name="AssignmentType" value="@Model.SelectedAssignment.AssignmentType" />
    </div>
    <div>
        <label>Project Name:</label>
        <select name="ProjectId">
            @foreach (var project in Model.ProjectOptions)
            {
                <option value="@project.ProjectId">@project.ProjectName</option>
            }
        </select>
    </div>
    <div>
        <div>
            <label>Status:</label>
            <select name="status" id="status">
                <option selected hidden value="@Model.SelectedAssignment.Status">@Model.SelectedAssignment.Status</option>
                <option value="Todo">To DO</option>
                <option value="Doing">Doing</option>
                <option value="Done">Done</option>
            </select>
        </div>

    </div>
    <div>
        <label>Due Date:</label> <input type="date" name="DueDate" value="@Model.SelectedAssignment.DueDate.ToString().Substring(0, 10)" />
    </div>
    <div>
        <input type="submit" value="Update Assignment" />

    </div>
</form>
