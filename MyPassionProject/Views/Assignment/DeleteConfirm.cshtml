@model MyPassionProject.Models.AssignmentDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this animal?</h2>
<a href="/Assignment/List">Cancel</a>
<h2>@Model.AssignmentType</h2>
<div>Project: @Model.ProjectName</div>
<div>Status: @Model.Status</div>
<div>Due Date: @Model.DueDate.ToString().Substring(0, 10)</div>
<form action="/Assignment/Delete/@Model.AssignmentId" method="POST">
    <input type="submit" value="Confirm Delete" />

</form>
