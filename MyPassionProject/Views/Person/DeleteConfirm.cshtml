@model MyPassionProject.Models.PersonDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2 class="text-center mt-2">Are you sure you want to delete this Person?</h2>

<div class="my-5">
    <table class="table table-striped my-5">
        <thead>
            <tr>
                <th scope="col" width="35%">Person First Name</th>
                <th scope="col" width="25%">Person Last Name</th>
                <th scope="col" width="25%"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.PersonFirstName</td>
                <td>@Model.PersonLastName</td>                <td>
                    <form class="col-lg-6 offset-lg-3" action="/Person/Delete/@Model.PersonId" method="POST">
                        <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<div class="text-center">
    <a href="/Person/Details/@Model.PersonId" class="my-4 btn btn-info" role="button" aria-pressed="true">Cancel</a>
</div>