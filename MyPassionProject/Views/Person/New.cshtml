
@{
    ViewBag.Title = "Create";
}

<h2 class="text-center my-5">Create Person</h2>

<form class="col-lg-6 offset-lg-3" action="/Person/Create" method="POST">
    <div class="form-group">
        <label for="fname">First Name:</label>
        <input type="text" class="form-control" id="fname" name="PersonFirstName" placeholder="Person FirstName">
    </div>
    <div class="form-group">
        <label for="lname">Last Name:</label>
        <input type="text" name="PersonLastName" class="form-control" id="lname" placeholder="Person LastName">
    </div>
    <div>
        <button type="submit" class="btn btn-primary my-5">Add Assignment</button>
    </div>
</form>